<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">
    <FrameLayout
        android:layout_width="@dimen/video_item_size"
        android:layout_height="@dimen/video_item_size">
        <ImageView
            android:id="@+id/cover_image"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_playlist_recommend_icon_default"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/video_name_txt"
            android:gravity="center"
            android:paddingLeft="@dimen/btn_padding"
            android:paddingRight="@dimen/btn_padding"
            android:text="视频名字视频名字视频名字视频名字"
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="@dimen/text_size_small"
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height"
            android:background="@color/video_title_bg"/>
    </FrameLayout>


    <Button
        android:visibility="gone"

        android:id="@+id/play_btn"
        style="@style/btn_grey_style"
        android:layout_width="@dimen/video_item_size"
        android:layout_marginTop="@dimen/btn_margin"
        android:text="播放" />
</LinearLayout>